<div class="row">
  <div class="col card mx-auto col-md-8 float-center">
    <div class="project-form">
      <%= form_for(@project) do |f| %>
        <div class="form-group">
          <%= f.label :title, "実証実験タイトル" %><br>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :sub_title, "検証ポイント" %><br>
          <%= f.text_area :sub_title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image, "画像URL" %><br>
          <%= f.text_field :image, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :client, "主催" %><br>
          <%= f.text_field :client, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :collaborator, "共催" %><br>
          <%= f.text_area :collaborator, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :begin_date, "検証開始日" %><br>
          <%= f.date_field :begin_date, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :end_date, "検証終了日" %><br>
          <%= f.date_field :end_date, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :place, "場所" %><br>
          <%= f.text_field :place, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :service, "サービス内容" %><br>
          <%= f.text_area :service, class: "form-control high" %>
        </div>
        <div class="form-group">
          <%= f.label :reference, "関連情報" %><br>
          <%= f.text_area :reference, class: "form-control high" %>
        </div>
        <div class="form-group">
          <%= f.label :category_list, "カテゴリ" %><br>
          <%= text_field_tag 'project[category_list]', @project.category_list.join(','), "data-role" => "tagsinput", class: "form-control", id: "category-tags" %>
        </div>
        <div class="form-group">
          <%= f.label :technology_list, "要素技術" %><br>
          <%= text_field_tag 'project[technology_list]', @project.technology_list.join(','), "data-role" => "tagsinput", class: "form-control", id: "technology-tags" %>
        </div>
        <div class="form-group">
          <%= f.label :press_date, "プレスリリース日" %><br>
          <%= f.date_field :press_date, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :press_url, "プレスURL" %><br>
          <%= f.text_field :press_url, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit :class=>"form-control btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
