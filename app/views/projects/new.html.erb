<div class="project-new">
  <%= form_for(@project) do |f| %>
    <div class="field">
      <%= f.label :title, "実証実験タイトル" %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :sub_title, "メッセージライン" %><br>
      <%= f.text_area :sub_title %>
    </div>
    <div class="field">
      <%= f.label :image, "アイキャッチ画像URL" %><br>
      <%= f.text_field :image %>
    </div>
    <div class="field">
      <%= f.label :client, "主催" %><br>
      <%= f.text_field :client %>
    </div>
        <div class="field">
      <%= f.label :period, "期間" %><br>
      <%= f.text_field :period %>
    </div>
    <div class="field">
      <%= f.label :place, "場所" %><br>
      <%= f.text_field :place %>
    </div>
    <div class="field">
      <%= f.label :press_date, "プレスリリース日" %><br>
      <%= f.date_field :press_date %>
    </div>
    <div class="field">
      <%= f.label :service, "サービス内容" %><br>
      <%= f.text_area :service %>
    </div>
    <div class="field">
      <%= f.label :reference, "関連情報" %><br>
      <%= f.text_area :reference %>
    </div>
    <div class="field">
      <%= f.label :category_list, "カテゴリ" %><br>
      <%= text_field_tag 'project[category_list]', @project.category_list.join(','), "data-role" => "tagsinput" %>
    </div>
    <div class="field">
      <%= f.label :technology_list, "要素技術" %><br>
      <%= text_field_tag 'project[technology_list]', @project.technology_list.join(','), "data-role" => "tagsinput" %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>