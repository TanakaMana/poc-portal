<%= link_to "編集", edit_project_path %>
<div class="project-detail">
	<h1><%= @project.title %></h1>
	<h3><%= @project.sub_title %></h3>
	<img src=<%= @project.image %>>

	<h2>カテゴリ</h2>
	<div class="content tag category">
		<ul>
			<% @project.categories.each do |cat| %>
				<li>
					<%= link_to cat.name, '' %>
					<span>(<%= cat.taggings_count %>)</span>
				</li>
			<% end %>
		</ul>
	</div>

	<h2>要素技術</h2>
	<div class="content tag technology">
		<ul>
			<% @project.technologies.each do |tech| %>
				<li>
					<%= link_to tech.name, '' %>
					<span>(<%= tech.taggings_count %>)</span>
				</li>
			<% end %>
		</ul>
	</div>

	<h2>基本情報</h2>
	<div class="content basic-info">
		<div class="row">
			<div class="col-3">
				<div class="item">
					主催
				</div>
			</div>
			<div class="col-9">
				<div class='item-info'>
					<%= @project.client %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-3">
				<div class="item">
					共催
				</div>
			</div>
			<div class="col-9">
				<div class='item-info'>
					<%= @project.collaborator %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-3">
				<div class="item">
					期間
				</div>
			</div>
			<div class="col-9">
				<div class='item-info'>
					<%= @project.begin_date %>~<%= @project.end_date %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-3">
				<div class="item">
					場所
				</div>
			</div>
			<div class="col-9">
				<div class='item-info'>
					<%= @project.place %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-3">
				<div class="item">
					サービス内容
				</div>
			</div>
			<div class="col-9">
				<div class='item-info'>
					<%= @project.service %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-3">
				<div class="item">
					関連情報
				</div>
			</div>
			<div class="col-9">
				<div class='item-info'>
					<%= @project.reference %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-3">
				<div class="item">
					プレスリリース日		
				</div>
			</div>
			<div class="col-9">
				<div class='item-info'>
					<%= @project.press_date %>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-3">
				<div class="item">
					プレスリリースURL	
				</div>
			</div>
			<div class="col-9">
				<div class='item-info'>
					<%= @project.press_url %>
				</div>
			</div>
		</div>
	</div>

	<h2>考察</h2>
	<div class="content comment">
	</div>
</div>